<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_bottom_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_favorite"
        />

    <ImageView
        android:id="@+id/icon_bottom_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_comment"
        />

    <ImageView
        android:id="@+id/icon_bottom_new_sighting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_new_sighting"
        />

    <ImageView
        android:id="@+id/icon_bottom_sighting_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_sighting_list"
        />

</LinearLayout>